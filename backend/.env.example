# Server Configuration
PORT=5000
NODE_ENV=development

# Database
MONGODB_URI=mongodb://localhost:27017/fairy-tale-books
# For production, use MongoDB Atlas or similar service
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/fairy-tale-books?retryWrites=true&w=majority

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:3000

# JWT Secret (for admin authentication)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# Admin Password (for demo purposes - use proper auth in production)
ADMIN_PASSWORD=admin123

# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_CHAT_ID=your_telegram_chat_id_here

# File Upload Configuration
MAX_FILE_SIZE=5242880  # 5MB in bytes
UPLOAD_PATH=./uploads

# Cloud Storage (optional - for production)
# AWS_ACCESS_KEY_ID=your_aws_access_key
# AWS_SECRET_ACCESS_KEY=your_aws_secret_key
# AWS_REGION=us-east-1
# S3_BUCKET_NAME=fairy-tale-books-uploads